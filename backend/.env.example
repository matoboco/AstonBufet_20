# Database
DATABASE_URL=postgresql://bufet:secret@localhost:5432/bufet

# JWT
JWT_SECRET=your-32-character-secret-key-here

# SMTP (set to 'console' for dev mode)
SMTP_MODE=console
SMTP_HOST=smtp.company.sk
SMTP_PORT=587
SMTP_USER=noreply@company.sk
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@company.sk

# Server
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Migrations (set to 'false' to skip auto-migrations on startup)
RUN_MIGRATIONS=true

# Office Assistant emails (comma-separated list)
# Users with these emails will automatically get office_assistant role
OFFICE_ASSISTANT_EMAILS=assistant@company.sk,admin@company.sk
