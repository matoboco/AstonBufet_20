{
  "name": "firemny-bufet-backend",
  "version": "1.0.0",
  "description": "Backend API for Firemn√Ω Bufet PWA",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:node": "ts-node-dev --respawn src/index.ts",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "node -e \"require('fs').cpSync('db/migrations', 'dist/db/migrations', {recursive: true})\"",
    "start": "bun run src/index.ts",
    "start:node": "node dist/index.js",
    "reminder": "bun run src/reminder.ts",
    "migrate": "bun run src/migrations/runner.ts run",
    "migrate:status": "bun run src/migrations/runner.ts status",
    "migrate:rollback": "bun run src/migrations/runner.ts rollback",
    "migrate:create": "bun scripts/create-migration.js",
    "test": "bun test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/node-cron": "^3.0.11",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
